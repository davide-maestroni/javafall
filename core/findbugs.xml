<FindBugsFilter>
    <Match>
        <Class name="com.github.dm.jrt.core.DefaultResultChannel$DefaultIterator"/>
        <Method name="next"/>
        <Bug pattern="IT_NO_SUCH_ELEMENT"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.DefaultResultChannel$DefaultOutputChannel"/>
        <Method name="next"/>
        <Bug pattern="IT_NO_SUCH_ELEMENT"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.DefaultResultChannel$EventualIterator"/>
        <Method name="next"/>
        <Bug pattern="IT_NO_SUCH_ELEMENT"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.runner.Runner"/>
        <Method name="&lt;init&gt;"/>
        <Bug pattern="ST_WRITE_TO_STATIC_FROM_INSTANCE_METHOD"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.util.UnitDuration"/>
        <Or>
            <Method name="wait"/>
            <Method name="waitSinceMillis"/>
            <Method name="waitSinceNanos"/>
        </Or>
        <Bug pattern="WA_NOT_IN_LOOP"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.util.UnitDuration"/>
        <Method name="fromUnit"/>
        <Bug pattern="FE_FLOATING_POINT_EQUALITY"/>
    </Match>
    <Match>
        <Class name="com.github.dm.jrt.core.util.UnitTime"/>
        <Method name="fromUnit"/>
        <Bug pattern="FE_FLOATING_POINT_EQUALITY"/>
    </Match>
</FindBugsFilter>
